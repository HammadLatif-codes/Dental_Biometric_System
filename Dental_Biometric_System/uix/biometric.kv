<Radiograph_Popup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {'x': 0.3, 'top': 0.6}
    title: "Select a file"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        FileChooserListView:
            id: FileChooser
            on_selection: root.select_radiograph_file(FileChooser.selection)

        Button:
            text: 'Select'
            size_hint: 1,0.2

            on_release: root.dismiss()


