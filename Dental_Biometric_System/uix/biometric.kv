<Results_Popup@Popup>    

    auto_dismiss: False
    title: "Found Records"


    GridLayout:
        id: parent_grid
        cols:1  
        size_hint: (None, None)
        height: 600
        width:800

        Label:
            text:"Dental Biometric System"
            font_size: 20
            bold: True
