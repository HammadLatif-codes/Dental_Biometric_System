#:import Factory kivy.factory.Factory


#popup_for_picute
<PicturePopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {'x': 0.3, 'top': 0.6}
    title: "Select a file"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        FileChooserListView:
            id: FileChooser
            on_selection: root.select_picture_file(FileChooser.selection)

        Button:
            text: 'Select'
            size_hint: 1,0.2

            on_release: root.dismiss()


#popup_for_radiograph
<RadiographPopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {'x': 0.3, 'top': 0.6}
    title: "Select a file"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        FileChooserListView:
            id: FileChooser
            on_selection: root.select_radiograph_file(FileChooser.selection)

        Button:
            text: 'Select'
            size_hint: 1,0.2

            on_release: root.dismiss()

        


<AddDetails>
    id:my_widget

     
    GridLayout:
        cols:1  
        size_hint: (None, None)
        height: 600
        width:800

        Label:
            text:"Dental Biometric System"
            font_size: 20
            bold: True
            text_size: self.size
            halign:"center"
            valign:"top"
            size_hint: (None, None)
            height: 100
            width:800
            padding: 10
            #spacing:50
        
        GridLayout:
            cols:2
            size_hint: None,None
            height:255
            width:800

            Label:
                text:'Name'
                text_size: self.size
                halign:"right"
                valign:"middle"
                size_hint:(None, None)
                height: 30
                width:400
                padding: 20
                

            TextInput:
                id:name
                multiline:False
                size_hint:(None, None)
                height: 30
                width: 200
                on_text: root.remove_message()
                

            Label:
                text:'Age'
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20
                
            TextInput:
                id:age
                multiline: False
                size_hint: (None, None)
                height: 30
                width: 200
                on_text: root.remove_message()
               
            
            Label:
                text:'Gender:'
                font_size: 20
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20

            Label:
                text:''

            Label:
                text: 'Male'
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20
            CheckBox:
                group:'gender'
                size_hint: (None, None)
                height: 30
                width: 200
                on_active:root.checkbox_click(self, self.active, 'Male')
            Label:
                text: 'Female'
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20
            CheckBox:
                group:'gender'
                size_hint: (None, None)
                height: 30
                width: 200
                on_active:root.checkbox_click(self, self.active, 'Female') 

            Label:
                text: 'State'
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20
            
            Spinner:
                id: spinner_id
                text: 'select State'
                size_hint: (None, None)
                height: 30
                width: 200
                values: ["Islamabad", "Punjab","Sindh", "Balochistan","KPK","Gilgit"]    
                on_text:root.spinner_click(spinner_id.text)
            
            Label:
                text: 'Upload Picture'
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20
            
            
            Button: 
                id: picture_button
                text: 'Select Picture'
                background_color: (220/255, 220/255, 220/255,1)
                size_hint: (None, None)
                height: 30
                width: 200
                on_release: root.show_picture_popup()
            
            Label:
                text: 'Upload Radiograph'
                text_size: self.size
                halign: "right"
                valign: "middle"
                size_hint: (None, None)
                height: 30
                width: 400
                padding: 20
            
            
            Button: 
                id: radiograph_button
                text: 'Select Radiograph'
                background_color: (220/255, 220/255, 220/255,1)
                size_hint: (None, None)
                height: 30
                width: 200
                on_release: root.show_radiograph_popup()

        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            height: 170
            width: 800

            Button:
                text: "Submit Details"                
                background_color: (220/255, 220/255, 220/255,1)
                size_hint: (None, None)
                height: 40
                width: 200
                pos_hint: {'center_x': 0.5}
                on_press: root.btn_event_handler()     
            
            Button:
                text: "Go Back"
                background_color: (220/255, 220/255, 220/255,1)
                size_hint: (None, None)
                height: 40
                width: 200
                pos_hint: {'center_x': 0.5}
                on_press: root.back_to_admin_pannel()

            Label:
                id: show_message
                text:''  
                bold: True
                size_hint: (None, None)
                height: 30
                width: 800

            