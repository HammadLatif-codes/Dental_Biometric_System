#popup_for_picute
<Update_PicturePopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {'x': 0.3, 'top': 0.6}
    title: "Select a file"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        FileChooserListView:
            id: FileChooser
            on_selection: root.select_picture_file(FileChooser.selection)

        Button:
            text: 'Select'
            size_hint: 1,0.2

            on_release: root.dismiss()


#popup_for_radiograph
<Update_RadiographPopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {'x': 0.3, 'top': 0.6}
    title: "Select a file"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        FileChooserListView:
            id: FileChooser
            on_selection: root.select_radiograph_file(FileChooser.selection)

        Button:
            text: 'Select'
            size_hint: 1,0.2

            on_release: root.dismiss()





<Tabs_class>:
    do_default_tab: False
    TabbedPanelItem:
        text: 'Search Record'
        GridLayout:
            cols:1 
            size_hint: (None, None)
            height: 600
            width:800

            Label:
                text:"Dental Biometric System"
                font_size: 40
                bold: True
                text_size: self.size
                halign:"center"
